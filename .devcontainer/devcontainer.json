{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "bash /workspaces/gofly/.devcontainer/init-script.sh",
  "postStartCommand": "bash /workspaces/gofly/.devcontainer/init-script.sh",
  "customizations": {
    "vscode": {
      "extensions": []
    }
  },
  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y netcat-traditional jq && echo \"$GITHUB_TOKEN\" | gh auth login --with-token"
}
